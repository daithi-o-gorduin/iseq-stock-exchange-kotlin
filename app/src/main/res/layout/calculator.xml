<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_calculator_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.80">

        <FrameLayout
            android:id="@+id/fl_calculator_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight ="0.20"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_calculator_simple"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="110dp"
            android:src="@drawable/calculator"
            android:padding="10dp"
            android:background="@drawable/mycircle"


            />

        <ImageView
            android:id="@+id/iv_calculator_fools"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:padding="10dp"
            android:src = "@drawable/motly"
            android:background="@drawable/mycircle_white_scale"

            android:gravity="center"

            />
        </LinearLayout>

</LinearLayout>