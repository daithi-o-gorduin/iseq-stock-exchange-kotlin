<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        >



    <TextView
        android:id="@+id/tv_custom_dialog_heading"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/app_orange"
        android:fontFamily="serif"
        android:background="@null"
        android:text = "Bank Of Ireland"
        android:textSize="20dp"
        android:padding="20dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_trans_data_list"

            android:layout_height="match_parent"
            android:dividerHeight="1dip"
            android:layout_width="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="50dp"

            >


            <ImageView
                android:id="@+id/iv_trans_dialog_icon"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:src = "@drawable/bank_of_ireland"/>

            <ImageView
               android:id="@+id/iv_trans_dialog_change_indicator"
               android:layout_width="0dp"
               android:layout_weight="0.3"
                android:padding="10dp"
               android:layout_height="match_parent"
               android:src = "@drawable/change_pos"/>

            <TextView
               android:id="@+id/tv_trans_dialog_change"
               android:layout_width="0dp"
               android:layout_weight="0.3"
                android:padding="5dp"
               android:layout_height="match_parent"
               android:text="+3.36%"
               android:textSize="15dp"
               android:gravity="center"
               android:textColor="@color/change_pos"
               />
    </LinearLayout>

</LinearLayout>