<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.333"
        android:orientation="horizontal" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:orientation="vertical" >


            <com.andexert.library.RippleView
                android:id="@+id/more"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/mycircle"
                android:elevation="12dp"
                app:rv_color = "@color/White"
                app:rv_alpha = "255"
                app:rv_rippleDuration = "200"
                app:rv_centered = "true"
                >
                <ImageView
                    android:id="@+id/extra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src = "@drawable/plus_icon_selector"
                    android:background="@drawable/extra_selector"


                    />
            </com.andexert.library.RippleView>

            <ImageView
                android:id="@+id/logo"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src = "@drawable/aib"
                android:scaleType="fitCenter"
                />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_ticker"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:fontFamily="sans-serif-medium"
                android:gravity="bottom|center"
                android:textSize="35dp"
                android:text="Ticker Id"
                />

            <TextView
                android:id="@+id/tv_last_trade_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45"
                android:fontFamily="sans-serif-light"
                android:gravity="top|center"
                android:textSize="15dp"
                android:text="Ticker Id"
                />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"

            android:orientation="vertical" >



            <ImageView
                android:id="@+id/star"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/extra_selector"
                android:elevation="12dp"
                />

            <ImageView
                android:id="@+id/change_indicator"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"

                />

            <TextView
                android:id="@+id/tv_change"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="15dp"

                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.333"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.333"
            android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>